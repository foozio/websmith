{
  "name": "@websmith/astro",
  "version": "1.0.0",
  "description": "Astro integration for Websmith design tokens",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vite": {
      "import": "./dist/vite.js",
      "types": "./dist/vite.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "design-tokens",
    "css",
    "websmith"
  ],
  "dependencies": {
    "@websmith/tokens": "^2.0.0",
    "@websmith/vite": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "astro": "^4.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "astro": "^3.0.0 || ^4.0.0"
  }
}
