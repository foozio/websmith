{
  "name": "@websmith/nextjs",
  "version": "1.0.0",
  "description": "Next.js integration for Websmith design tokens",
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./withWebsmith": {
      "import": "./dist/withWebsmith.mjs",
      "types": "./dist/withWebsmith.d.mts"
    },
    "./tailwind": {
      "import": "./dist/tailwind.mjs",
      "types": "./dist/tailwind.d.mts"
    },
    "./provider": {
      "import": "./dist/provider.mjs",
      "types": "./dist/provider.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nextjs",
    "design-tokens",
    "css",
    "websmith",
    "tailwindcss"
  ],
  "dependencies": {
    "@websmith/tokens": "^2.0.0",
    "@websmith/theme": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "tailwindcss": "^3.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^3.0.0"
  }
}
