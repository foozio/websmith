# Minimal production Dockerfile for Websmith Kit Documentation
FROM node:18-alpine

WORKDIR /app

# Copy the standalone build output
COPY apps/docs/.next/standalone ./
# Copy static files to the correct location for standalone mode
COPY apps/docs/.next/static ./apps/docs/.next/static
# Copy public files
COPY apps/docs/public ./apps/docs/public

EXPOSE 3000

ENV PORT 3000
ENV HOSTNAME "0.0.0.0"

CMD ["node", "apps/docs/server.js"]