# Simple production Dockerfile for Websmith Kit Documentation
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY apps/docs/package.json ./
COPY package.json package-lock.json ./

# Install production dependencies only
RUN npm ci --omit=dev --ignore-scripts

# Copy the pre-built application
COPY apps/docs/.next ./.next
COPY apps/docs/public ./public

# Expose port
EXPOSE 3000

# Start the application
CMD ["npx", "next", "start"]